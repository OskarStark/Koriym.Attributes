{
    "name": "koriym/attributes",
    "keywords": ["annotation", "attribute"],
    "description": "An annotation/attribute reader",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "doctrine/annotations": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12",
        "vimeo/psalm": "^4.1",
        "phpmetrics/phpmetrics": "^2.7",
        "doctrine/coding-standard": "^8.1", "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "Koriym\\Attributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Koriym\\Attributes\\": [
                "tests/",
                "tests/Fake",
                "tests-php8"
            ]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "tests": ["@cs", "@test", "@sa"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "pcov": ["php -dextension=pcov.so -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage  --coverage-clover=coverage.xml"],
        "cs": ["phpcs --standard=./phpcs.xml src tests"],
        "cs-fix": ["./vendor/bin/phpcbf src tests"],
        "sa": ["./vendor/bin/phpstan analyse -c phpstan.neon", "psalm --show-info=true"],
        "clean": ["./vendor/bin/phpstan clear-result-cache", "./vendor/bin/psalm --clear-cache"],
        "metrics": ["./vendor/bin/phpmetrics --report-html=build/metrics --exclude=Exception --log-junit=build/junit.xml --junit=build/junit.xml src"],
        "build": ["@cs", "@sa", "@pcov", "@metrics"]
    },
    "scripts-descriptions": {
        "test": "Run unit tests",
        "tests": "Run tests and quality checks",
        "coverage": "Generate test coverage report",
        "pcov": "Generate test coverage report (pcov)",
        "cs": "Check the coding style",
        "cs-fix": "Fix the coding style",
        "sa": "Run static analysis",
        "clean": "Clear cache",
        "metrics": "Build metrics report",
        "build": "Build project"
    }
}
